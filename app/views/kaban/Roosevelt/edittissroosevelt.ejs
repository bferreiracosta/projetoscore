<script type="text/javascript">
$(function(){
	$(window).on('resize load', function() {
  if ($(window).width() <= 768) { 
    $("#mobile").removeClass("container");
  }
  else {
    $("#mobile").addClass("container");
  }
});
});

$("#atividades").on('change', function(e){
     var atividades = document.getElementById('atividades').value;
     document.getElementById('atividades2').value = atividades;
});
$("#ventiltorio").on('change', function(e){
     var ventiltorio = document.getElementById('ventiltorio').value;
     document.getElementById('ventiltorio2').value = ventiltorio;
});
$("#cardiovascular").on('change', function(e){
     var cardiovascular = document.getElementById('cardiovascular').value;
     document.getElementById('renal2').value = renal;
});
$("#renal").on('change', function(e){
     var renal = document.getElementById('renal').value;
     document.getElementById('renal2').value = renal;
});
$("#neurologico").on('change', function(e){
     var neurologico = document.getElementById('neurologico').value;
     document.getElementById('neurologico2').value = neurologico;
});
$("#metabolico").on('change', function(e){
     var metabolico = document.getElementById('metabolico').value;
     document.getElementById('metabolico2').value = metabolico;
});
$("#intervencoes").on('change', function(e){
     var intervencoes = document.getElementById('intervencoes').value;
     document.getElementById('intervencoes2').value = intervencoes;
});


function pad(s){
		return (s<10) ? '0' + s :s;
	}
function novaHora(){
	
	var date = new Date();
	document.getElementById('horas').value= [date.getHours(), date.getMinutes()].map(pad).join(':');
	document.getElementById('data').value = date.getDate() + "/" + (date.getMonth()+1) + "/" + date.getFullYear();
}
novaHora();


function calcular(){
	var resultadoatividades;
	var atividades = document.getElementById('atividades2').value;
	
	if(atividades == "Monitorização Padrão.Sinais Vitais de horário ,registro e cálculo regular do balanço hídrico"){
		resultadoatividades = 6;
	}
	if(atividades == "Laboratório,Investigações  bioquímicas e microbiológicas"){
		resultadoatividades = 1;
	}
	if(atividades == "Medicação Única, EV,IM,SC  e/ou VO ou SNG"){
		resultadoatividades	= 2;
	}
	if(atividades == "Medicação Endovenosa Múltiplas. Mais que uma Droga"){
		resultadoatividades = 3;
	}
	if(atividades == "Troca de Curativos de Rotinas.Cuidado e prevenção de Ulceras de Decúbito/ Troca diária de curativo"){
		resultadoatividades = 1;
	}
	if(atividades == "Troca frequente de curativos .Pelo menos uma vez por turno de enfermagem e/ ou cuidados com feridas extensas "){
		resultadoatividades = 1;
	}
	if(atividades == "Cuidados com drenos .Todos (exceto SNG)"){
		resultadoatividades = 3;
	}

	var resultadoventilatorio;
	var ventilatorio = document.getElementById('ventilatorio2').value;
	
	if(ventilatorio == "Ventilação Mecânica. Qualquer forma de ventilação mecânica com ou sem PEEP.Com ou sem relaxantes musculares respiração espontânea com PEEP"){
		resultadoventilatorio = 5;
	}
	if(ventilatorio == "Suporte ventilatório suplementar .Respiração espontânea através de SOT sem PEEP.O2 suplementar por qualquer método exceto aplicação de parâmetros de ventil. Mecânica"){
		resultadoventilatorio = 2;
	}
	if(ventilatorio == "Cuidados com vias aéreas artificiais, SOT ou Traqueostomia  "){
		resultadoventilatorio	= 1;
	}
	if(ventilatorio == "Tratamento para melhora da função pulmonar.Fisioterapia torácica , espirometria estipulada, terapia de inalação, aspiração traqueal"){
		resultadoventilatorio = 1;
	}

	var resultadocardiovascular;
	var cardiovascular = document.getElementById('cardiovascular2').value;
	
	if(cardiovascular == "Medicação vasoativa única.Qualquer droga vasoativa"){
		resultadocardiovascular = 3;
	}
	if(cardiovascular == "Medicação vasoativa múltipla. Mais que uma droga independente do tipo e dose "){
		resultadocardiovascular = 4;
	}
	if(cardiovascular == "Reposição de grandes perdas volêmicas.Administração de volume maiores 31/ml/m/dia "){
		resultadocardiovascular	= 4;
	}
	if(cardiovascular == "Catéter arterial periférico"){
		resultadocardiovascular = 5;
	}
	if(cardiovascular == "Monitorização do átrio esquerdo .Catéter da arteria pulmonar com ou sem medida de débito cardíaco"){
		resultadocardiovascular = 8;
	}
	if(cardiovascular == "Via venosa central"){
		resultadocardiovascular = 2;
	}
	if(cardiovascular == "Ressuscitação cardiopulmonar (PCR nas últimas  24hs)"){
		resultadocardiovascular = 3;
	}

	var resultadorenal;
	var renal = document.getElementById('renal2').value;
	
	if(renal == "Técnicas de hemofiltração.Técnicas  diaíticas "){
		resultadorenal = 3;
	}
	if(renal == "Medida quantitativa do débito urinário (Ex. SVD )"){
		resultadorenal = 2;
	}
	if(renal == "Diurese ativa (Ex. furosemida maior 0,5mg/kg/dia)"){
		resultadorenal	= 3;
	}
	
	var resultadoneurologico;
	var neurologico = document.getElementById('neurologico2').value;
	
	if(neurologico == "Medida da pressão intracraniana"){
		resultadoneurologico = 4;
	}
	
	var resultadometabolico;
	var metabolico = document.getElementById('metabolico2').value;
	
	if(metabolico == "Tratamento acidose/alcalose complicada"){
		resultadometabolico = 4;
	}
	if(metabolico == "Nutrição parenteral total"){
		resultadometabolico = 3;
	}
	if(metabolico == "Nutrição enteral ( Ex. SNG )"){
		resultadometabolico	= 2;
	}
	
	var resultadointervencoes;
	var intervencoes = document.getElementById('intervencoes2').value;
	
	if(intervencoes == "Intervenção específica única na UTI. Intubação endotraqueal , introdução marcapasso ,endoscopia  cirurgia de emergência nas últimas 24 horas  , lavagem gástrica.Não estão inclusas intervenções de rotina s/ consequência direta para as condições do paciente "){
		resultadointervencoes = 3;
	}
	if(intervencoes == "Intervenção específica múltiplas na UTI. Mais que uma conforme descrição acima"){
		resultadointervencoes = 5;
	}
	if(intervencoes == "Intervenções específicas fora da UTI.Procedimentos diagnósticos ou cirúrgicos "){
		resultadointervencoes	= 5;
	}
	
	var score = resultadoatividades + resultadoventilatorio + resultadocardiovascular + resultadorenal + resultadoneurologico + resultadometabolico + resultadointervencoes;
	var resultadofinal;

	if(score<10){
		resultadofinal = "Classe I - Não Necessita de UTI";
		document.getElementById('tiss').value = resultadofinal;
	}
	if(score>=10&&score<=19){
		resultadofinal = "Classe II - Indicação de UTI";
		document.getElementById('tiss').value = resultadofinal;
	}
	
	if(score>=20&&score<=39){
		resultadofinal = "Classe III - Instabilidade Hemodinamica(Assistência Intensiva)";
		document.getElementById('tiss').value = resultadofinal;
	}
	
	if(score>39){
		resultadofinal = "Classe IV - Grande Instabilidade";
		document.getElementById('tiss').value = resultadofinal;
	}
	
	if(score>34){
		resultadofinal = "Semi Intensivos";
		document.getElementById('tiss').value = resultadofinal;
	}	
}

</script>