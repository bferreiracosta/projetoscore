<%- include('./cabecalhoregulacao'); %>
<div class="container">

<form action="/editarleitocim" method="post">
                <h2>Quantidades de leitos CIM</h2> 
                <% if(id.length > 0) { %>
                    <% for(var i = 0; i < id.length; i++) {%>
                    <input type="hidden" name="idusuario" value="<%=id[i].id_usuario %>">     
                    <p hidden id="idunidade">  <%=id[i].unidade %>  
                        <% if(leito.length > 0) { %>
                            <% for(var j = 0; j < leito.length; j++) {%>
                <div>
					<div class="form-group">
                        <label for="posto">Quantidade leito enfermaria</label>
                        <input disabled type="number" name="Posto" class="form-control" value="<%=leito[j].enfermariacim %>">
                    </div>                  
                </div>
				<h2>Oferta de leitos</h2> 
				<div>
					<div class="form-group">
                        <label for="posto">Quantidade vagas enfermaria feminina</label>
                        <input type="number" name="enffem" class="form-control" value="<%=leito[j].enfermariacimfeminino %>" required>
                    </div>
                    <div class="form-group">
                        <label for="posto">Quantidade vagas enfermaria masculina</label>
                        <input type="number" name="enfmas" class="form-control" value="<%=leito[j].enfermariacimmasculino %>" required>
                    </div>                    
                </div>
                <div>
                    <div class="form-group">
                        <label for="posto">Quantidade leitos bloqueados Enfermaria</label>
                        <input type="number" name="bloq" class="form-control" value="<%=leito[j].leitosbloqueadoenfermariacim %>" required>
                    </div>                    
                </div>
                <div>
                    <a href="homeregulacao?id=<%=id[i].id_usuario %>" class="btn btn-md btn-info edit">Voltar</a>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
                <% } %>	
                <% } %> 
                <% } %>	
                <% } %> 
                <br>
					<br>
					<br>
                
</form>
</div>
<!-- Importando o jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  
<!-- Importando o js do bootstrap -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<%- include('./footer'); %>
</body>
</html>