				 aria-hidden="true">
				<div  role="document">
					<div >
						<div >
							<h5  id="exampleModalLabel">NEWs</h5>
						</div>
						<div >
							<div class="form-group">
								<input type="hidden" name="id" class="form-control" placeholder="" value="<%=paciente[j].id_paciente %>" required>
