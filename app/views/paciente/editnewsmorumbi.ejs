									<option value="sim">Sim</option>
									<option value="nao">Não</option>
								</select>
								<input type="hidden" name="o2"  id="uso02" class="form-control" placeholder="Uso de O2" required>
							</div>
							<div class="form-group">
								<label for="temp">Temperatura</label>
								<input type="text" name="temp"  id="temp" class="form-control" placeholder="Temperatura" required>
							</div>
							<div class="form-group">
