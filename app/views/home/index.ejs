<!DOCTYPE html>
<html>
<head>
	<title>SCORESystem</title>
   
	<!--Bootsrap 4 CDN-->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	
    <!--Fontawesome CDN-->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

	<!-- Custom styles
	<link href="/css/style.css" rel="stylesheet"> -->

	<!-- favicon -->
	<link rel="shortcut icon" href="/images/favicon.ico" />
	<style>
@import url('https://fonts.googleapis.com/css?family=Numans');

html,body{
background-image: url("images/saude.jpg") ;
background-size: cover;
background-repeat: no-repeat;
height: 92%;
font-family: 'Numans', sans-serif;
}
.h-100 {
    height: 80%!important;
}
.container{
height: 100%;
align-content: center;
}

.card{
height: 370px;
margin-top: auto;
margin-bottom: auto;
width: 430px;
background-color: rgba(0,0,0,0.5) !important;
}

.social_icon span{
font-size: 60px;
margin-left: 10px;
color: #FFC312;
}

.social_icon span:hover{
color: white;
cursor: pointer;
}

.card-header h3{
color: white;
margin-left: 120px;
}

.social_icon{
position: absolute;
right: 20px;
top: -45px;
}

.input-group-prepend span{
width: 50px;
background-color: #FFC312;
color: black;
border:0 !important;
}

input:focus{
outline: 0 0 0 0  !important;
box-shadow: 0 0 0 0 !important;

}

.remember{
color: white;
}

.remember input
{
width: 20px;
height: 20px;
margin-left: 15px;
margin-right: 5px;
}

.login_btn{
color: black;
background-color: #FFC312;
width: 100px;
}

.login_btn:hover{
color: black;
background-color: white;
}

.links{
color: white;
}

.links a{
margin-left: 4px;
}

a:link, a:visited {
	text-decoration: none;
	color: white
	}
a:hover {
	text-decoration: underline; 
	color: white
	}
a:active {
	text-decoration: none;
	color: white
	}
img {
    vertical-align: middle;
    border-style: none;
    width: 88px;
}
.copyright {

position: fixed;
left: 0;
bottom: 0;
width: 100%;
background-color: #202020; }
.copyright span,
.copyright a {
  color: #878787;}
	</style>
</head>
<body>
	<div class="container-fluid">
		
		<img id="img" src="/images/logo.png" /> 
	

	</div>
 
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Login</h3>
			</div>
			<div class="card-body">
				<form action="auth" method="post">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" name="usuario" id="usuario" placeholder="Usuário" class="form-control" autocomplete="off" required />
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" name="senha" id="senha" placeholder="Senha" class="form-control" required />
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<select onChange="update()" id="funcao"  class="form-control form-control-lg" required>
							<option hidden>Módulo</option>
							<option value="SCIH">SCIH</option>
							<option value="gestao">Gestão de Leitos</option>
							<option value="equipamentos">Central de Equipamentos</option>
							<option value="Regulacao Covid">Regulação Covid</option>
							<option  value="obstetricia">Obstetricia</option>
							<option value="SM Hospitalidade">SM Hospitalidade</option>
							<option value="SM Urgência">SM Urgência</option>
						</select>
						<input  type="hidden" name="cargo" id="cargo">
					</div>
					<div class="row align-items-center remember">
						<div>
							<% if ( msg.length > 0 ) { %>
								<p style="color: red;"><%= msg %> </p>
							  <% } %>
						</div>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-success">Entrar</button>
						<a href="/updatepassword">Alterar Senha</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

	

</body>
<%- include('./footer'); %>
<script type="text/javascript">
	function update() {
		var select = document.getElementById('funcao');
		var option = select.options[select.selectedIndex];

		var opcao = option.value;
		document.getElementById('cargo').value = opcao;
	
	}

	update();

	
</script>