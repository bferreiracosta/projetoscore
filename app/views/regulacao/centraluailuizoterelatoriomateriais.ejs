<%- include('./cabecalhoregulacao'); %>
    <h2>Central Materiais UAI Luizote</h2>
    
        <% if(id.length > 0) { %>
            <% for(var i = 0; i < id.length; i++) {%>
        <table class="table table-striped" style="width: 100%;" id="mytable">
            <input name="usuario" type="hidden" value="<%=id[i].id_usuario %>">
            <thead>
            <tr>
                <th>Equipamentos em uso:</th>
                <th>Quantidade</th>
                <th>Equipamentos disponíveis:</th>
                <th>Quantidade</th>
            </tr>
            </thead>
            <tbody>   
                <% if(dispositivo.length > 0) { %>
                    <% for(var j = 0; j < dispositivo.length; j++) {%> 
                <tr>
                    <td>Ventilador mecânico</td>
                    <td><%=dispositivo[j].vmu %></td>
                    <td>Ventilador mecânico</td>
                    <td><%=dispositivo[j].vmd %></td>
                </tr>
                <tr>
                    <td>Monitor</td>
                    <td><%=dispositivo[j].mu %></td>
                    <td>Monitor</td>
                    <td><%=dispositivo[j].md %></td>
                </tr>
                <tr>
                    <td>BIC</td>
                    <td><%=dispositivo[j].bicu %></td>
                    <td>BIC</td>
                    <td><%=dispositivo[j].bicd %></td>
                </tr>
                
        
                <% } %>	
                <% } %>
    
            </tbody>
        </table>
        <% } %>	
        <% } %>
