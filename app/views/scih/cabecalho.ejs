			<!-- Delete Product Modal-->
			<form id="add-row-form" action="/trocarmodulo" method="POST">
				<div class="modal fade" id="BaixaModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
					aria-hidden="true">
					<div class="modal-dialog">
