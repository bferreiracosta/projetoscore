<script>
$(function(){
	$(window).on('resize load', function() {
			if ($(window).width() <= 768) { 
				$("#mobile").removeClass("container");
		}
			else {
				$("#mobile").addClass("container");
		}
	});
});
$(document).ready(function(){
      $('#dataatendimento').mask('00/00/0000');
	 	 
      });
</script>